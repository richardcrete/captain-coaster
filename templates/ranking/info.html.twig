<div class="panel panel-flat">
    <div class="panel-heading text-center">
        <ul class="pagination">
            {% if previousRanking is not null %}
                <li class="page-item">
                    <a class="page-link"
                       href="{{ path('noncurrent_ranking', {'date': previousRanking.computedAt|date('Y-m')}) }}">
                        <i class="icon-arrow-left8"></i>
                    </a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link">
                        <i class="icon-arrow-left8"></i>
                    </span>
                </li>
            {% endif %}
            <li class="page-item active">
                    <span class="page-link">
                        {{ 'coaster_ranking.info.current'|trans({'%date%': ranking.computedAt|format_date(locale: app.locale)}) }}
                    </span>
            </li>
            {% if nextRanking is not null %}
                <li class="page-item">
                    <a class="page-link"
                       href="{% if isNextRankingLast %}{{ path('ranking_index') }}{% else %}{{ path('noncurrent_ranking', {'date': nextRanking.computedAt|date('Y-m')}) }}{% endif %}"
                    >
                        <i class="icon-arrow-right8"></i>
                    </a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link"><i class="icon-arrow-right8"></i></span>
                </li>
            {% endif %}
        </ul>
    </div>
    <div class="panel-body text-center">
        <div class="col-xs-3">
            <div class="content-group no-margin">
                <h6 class="text-semibold no-margin">
                    <i class="icon-comments position-left text-slate"></i><br/>{{ ranking.rankedCoasterNumber }}
                    {% if previousRanking is not null and ranking.rankedCoasterNumber - previousRanking.rankedCoasterNumber > 0 %}
                        <span
                            class="badge bg-blue-400">+{{ ranking.rankedCoasterNumber - previousRanking.rankedCoasterNumber }}</span>
                    {% endif %}
                </h6>
                <span
                    class="visible-xs text-muted text-size-small">{{ 'coaster_ranking.info.coasters_ranked.short'|trans }}</span>
                <span
                    class="hidden-xs text-muted text-size-small">{{ 'coaster_ranking.info.coasters_ranked.long'|trans }}</span>
            </div>
        </div>
        <div class="col-xs-3">
            <div class="content-group no-margin">
                <h6 class="text-semibold no-margin">
                    <i class="icon-stars position-left text-slate"></i><br/>{{ ranking.ratingNumber|shortNum }}
                    {% if previousRanking is not null and ranking.ratingNumber - previousRanking.ratingNumber > 1000 %}
                        <span
                            class="badge bg-blue-400">+{{ (ranking.ratingNumber - previousRanking.ratingNumber)|shortNum }}</span>
                    {% endif %}
                </h6>
                <span class="text-muted text-size-small">{{ 'coaster_ranking.info.ratings'|trans }}</span>
            </div>
        </div>
        <div class="col-xs-3">
            <div class="content-group no-margin">
                <h6 class="text-semibold no-margin">
                    <i class="icon-users position-left text-slate"></i><br/>{{ ranking.userNumber }}
                    {% if previousRanking is not null and ranking.userNumber - previousRanking.userNumber > 0 %}
                        <span
                            class="badge bg-blue-400">+{{ ranking.userNumber - previousRanking.userNumber }}</span>
                    {% endif %}
                </h6>
                <span class="text-muted text-size-small">{{ 'coaster_ranking.info.users'|trans }}</span>
            </div>
        </div>
        <div class="col-xs-3">
            <div class="content-group no-margin">
                <h6 class="text-semibold no-margin">
                    <i class="icon-git-compare position-left text-slate"></i><br/>{{ ranking.comparisonNumber|shortNum }}
                    {% if previousRanking is not null and ranking.comparisonNumber - previousRanking.comparisonNumber > 1000 %}
                        <span
                            class="badge bg-blue-400">+{{ (ranking.comparisonNumber - previousRanking.comparisonNumber)|shortNum }}</span>
                    {% endif %}
                </h6>
                <span
                    class="visible-xs text-muted text-size-small">{{ 'coaster_ranking.info.comparisons.short'|trans }}</span>
                <span
                    class="hidden-xs text-muted text-size-small">{{ 'coaster_ranking.info.comparisons.long'|trans }}</span>
            </div>
        </div>
    </div>
</div>
